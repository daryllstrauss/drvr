<?xml version="1.0"?>
<robot name="drvr" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- From front of robot, Z Up, X Back, Y Across -->

  <!-- Define robot constants -->
  <xacro:property name="base_width" value="0.136"/>
  <xacro:property name="base_length" value="0.185"/>
  <xacro:property name="base_height" value="0.035"/>

  <xacro:property name="wheel_radius" value="0.035"/>
  <xacro:property name="wheel_width" value="0.035"/>

  <xacro:property name="wheel_zoff" value="0.015"/>
  <xacro:property name="wheel_ygap" value="0.005"/>
  <xacro:property name="wheel_xoff" value="0.035"/>
  <xacro:property name="axel_dist" value="0.12"/>

  <!-- Define intertial property macros  -->
  <xacro:macro name="box_inertia" params="m w h d">
    <inertial>
      <origin xyz="0 0 0" rpy="${pi/2} 0 ${pi/2}"/>
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (h*h + d*d)}" ixy="0.0" ixz="0.0" iyy="${(m/12) * (w*w + d*d)}" iyz="0.0" izz="${(m/12) * (w*w + h*h)}"/>
    </inertial>
  </xacro:macro>

  <xacro:macro name="cylinder_inertia" params="m r h">
    <inertial>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (3*r*r + h*h)}" ixy = "0" ixz = "0" iyy="${(m/12) * (3*r*r + h*h)}" iyz = "0" izz="${(m/2) * (r*r)}"/>
    </inertial>
  </xacro:macro>

  <!-- Robot Base -->
  <link name="base_link">
    <visual>
      <origin xyz="${base_length/2} 0.0 ${base_height/2}"/>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="${base_length/2} 0.0 ${base_height/2}"/>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
    </collision>

    <xacro:box_inertia m="15" w="${base_width}" d="${base_length}" h="${base_height}"/>
  </link>

  <!-- Robot Footprint -->
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0.0 0.0 ${wheel_zoff-wheel_radius}" rpy="0 0 0"/>
  </joint>

  <!-- Wheels -->
  <xacro:macro name="wheel" params="prefix x_reflect y_reflect axel_off">
    <link name="${prefix}_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
            <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <material name="Gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
      </collision>

      <xacro:cylinder_inertia m="0.5" r="${wheel_radius}" h="${wheel_width}"/>
    </link>

    <joint name="${prefix}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${prefix}_link"/>
      <origin xyz="${x_reflect*(wheel_xoff+axel_off)} ${y_reflect*(base_width/2+wheel_ygap+wheel_width/2)} ${wheel_zoff}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <xacro:wheel prefix="drivewhl_l" x_reflect="1" y_reflect="1" axel_off="0"/>
  <xacro:wheel prefix="drivewhl_r" x_reflect="1" y_reflect="-1" axel_off="0"/>
  <xacro:wheel prefix="backwhl_l" x_reflect="1" y_reflect="1" axel_off="${axel_dist}"/>
  <xacro:wheel prefix="backwhl_r" x_reflect="1" y_reflect="-1" axel_off="${axel_dist}"/>
</robot>
